<% provide(:title, @user.name) %>


<div class="row text-center">
  <%= gravatar_for @user %>
  <p class="lead"><%= @user.name %></p>
</div>

<div class="container-fluid">
  <div class="row">
    <% @user.quotes.each do |quote| %>
      <div class="text-center col-xs-9 col-xs-offset-1">
        <p><em><%= quote.content %></em></p>
      </div>
      <div class="col-xs-1">
        <%= link_to "X", quote, method: :delete, data: { confirm: "Delete this quote?" } %>
      </div>
    <% end %>
  </div>
</div>

