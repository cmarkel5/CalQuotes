<% provide(:title, @user.name) %>


<div class="row text-center">
  <%= gravatar_for @user %>
  <p class="lead"><%= @user.name %></p>
</div>

<div class="container-fluid">
  <div class="row">
    <% @user.quotes.each do |quote| %>
      <div class="text-center col-md-9 col-md-offset-1">
        <p><em><%= quote.content %></em></p>
      </div>
      <div class="col-md-1">
        <%= link_to "X", quote, method: :delete, data: { confirm: "Are you sure you delete this favorite quote?" }, class: "btn btn btn-sm btn-warning" %>
      </div>
    <% end %>
  </div>
</div>