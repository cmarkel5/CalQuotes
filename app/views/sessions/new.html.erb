<% provide(:title, "Sign in") %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">  
      <div class="well">
        <h4 class="text-center"><strong>Sign In</strong></h4>
        <%= form_for(:session, url: sessions_path) do |f| %>
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-input', autofocus: true %>
      
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-input' %>
       
          <%= f.submit 'Sign in', class: 'btn btn-sm btn-primary btn-block' %>
        <% end %>

        <p>New user? <%= link_to "Sign up", signup_path %></p>
      </div>
    </div>
  </div>
</div>
